{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "src/seed.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}