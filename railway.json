{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "yarn install && npx prisma generate"
  },
  "deploy": {
    "startCommand": "npx prisma db push --accept-data-loss --force-reset && npx ts-node src/index.ts",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}